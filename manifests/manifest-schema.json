{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TCAdmin v3 Plugin Manifest",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "optional": {
            "type": "boolean"
          }
        },
        "required": [
          "path",
          "type",
          "optional"
        ]
      }
    }
  },
  "required": [
    "identifier",
    "author",
    "name",
    "icon",
    "images",
    "description",
    "version",
    "tags",
    "files"
  ]
}